<Window x:Class="ScenarioEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hx="clr-namespace:HexGridControl;assembly=HexGridControl"
        xmlns:local="clr-namespace:ScenarioEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="1050" Width="1680" Loaded="Window_Loaded">

    <Viewbox Stretch="Fill">
        <Grid Name="MainGrid">
            <Image x:Name="Map" Margin="1239,589,0,0" Width="422" Height="420" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <WrapPanel x:Name="TerrainTypeSelector" HorizontalAlignment="Left" Margin="1398,36,0,912" Width="326"/>
            <hx:HexItem Orientation="Horizontal" Margin="0,105,248,831" Name="TerrainType" HorizontalAlignment="Right" Width="79" />
            <WrapPanel x:Name="EdgeTypeSelector" HorizontalAlignment="Left" Margin="1397,214,0,739" Width="317"/>
            <WrapPanel x:Name="StructureTypeSelector" HorizontalAlignment="Left" Margin="1398,384,0,570" Width="316"/>
            <Label Content="Terrain Type Selector" HorizontalAlignment="Left" Margin="1397,10,0,973"/>
            <Label Content="Edge Type Selector" HorizontalAlignment="Left" Margin="1397,183,0,800"/>
            <Label Content="Structure Type Selector" HorizontalAlignment="Left" Margin="1398,353,0,630"/>
            <Label Content="Faction Selector" HorizontalAlignment="Left" Margin="1398,270,0,713"/>
            <WrapPanel x:Name="FactionSelector" HorizontalAlignment="Left" Margin="1398,301,0,656" Width="316"/>
            <WrapPanel x:Name="UnitSelector" HorizontalAlignment="Left" Margin="1398,475,0,420" Width="316"/>
            <Label Content="Unit Selector" HorizontalAlignment="Left" Margin="1398,444,0,539"/>
        </Grid>
    </Viewbox>

</Window>
