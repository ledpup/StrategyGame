<Window x:Class="ScenarioEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hx="clr-namespace:HexGridControl;assembly=HexGridControl"
        xmlns:local="clr-namespace:ScenarioEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="1050" Width="1680" Loaded="Window_Loaded">
   
    <Viewbox Stretch="Fill">
        <Grid Name="MainGrid">
            <Image x:Name="Map" Margin="1239,589,0,0" Width="422" Height="420" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <WrapPanel x:Name="TerrainTypeSelector" HorizontalAlignment="Left" Height="138" Margin="1398,10,0,0" VerticalAlignment="Top" Width="264"/>
            <hx:HexItem Orientation="Horizontal" Margin="0,206,77,0" Name="TerrainType" HorizontalAlignment="Right" VerticalAlignment="Top" Height="102" Width="112" />
            <WrapPanel x:Name="EdgeTypeSelector" HorizontalAlignment="Left" Height="138" Margin="1398,328,0,0" VerticalAlignment="Top" Width="264"/>
        </Grid>
    </Viewbox>
   
</Window>
