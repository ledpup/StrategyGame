<Window x:Class="ScenarioEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hx="clr-namespace:HexGridControl;assembly=HexGridControl"
        xmlns:local="clr-namespace:ScenarioEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="1050" Width="1680" Loaded="Window_Loaded">

    <Viewbox Stretch="Fill">
        <Grid Name="MainGrid">
            <Image x:Name="Map" Margin="1239,589,0,0" Width="422" Height="420" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <WrapPanel x:Name="TerrainTypeSelector" HorizontalAlignment="Left" Height="61" Margin="1398,36,0,0" VerticalAlignment="Top" Width="326"/>
            <hx:HexItem Orientation="Horizontal" Margin="0,105,248,0" Name="TerrainType" HorizontalAlignment="Right" VerticalAlignment="Top" Height="73" Width="79" />
            <WrapPanel x:Name="EdgeTypeSelector" HorizontalAlignment="Left" Height="97" Margin="1397,214,0,0" VerticalAlignment="Top" Width="317"/>
            <WrapPanel x:Name="StructureTypeSelector" HorizontalAlignment="Left" Height="138" Margin="1398,347,0,0" VerticalAlignment="Top" Width="316"/>
            <Label Content="Terrain Type Selector" HorizontalAlignment="Left" Margin="1397,10,0,0" VerticalAlignment="Top"/>
            <Label Content="Edge Type Selector" HorizontalAlignment="Left" Margin="1397,183,0,0" VerticalAlignment="Top"/>
            <Label Content="Structure Type Selector" HorizontalAlignment="Left" Margin="1398,316,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Viewbox>

</Window>
